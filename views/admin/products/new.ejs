<%- include('../../partials/menu') %>

<div class="form-container">
  <h2>Novo Produto</h2>

  <form action="/admin/produtos" method="POST">

    <label for="name">Nome:</label>
    <input type="text" id="name" name="name" required />

    <label for="price">Pre√ßo:</label>
    <input type="number" id="price" name="price" step="0.01" required />

    <label for="imagemURL">Imagem (URL):</label>
    <input type="text" id="imagemURL" name="imagemURL" />

    <label for="restaurantId">Restaurante:</label>
    <select id="restaurantId" name="restaurantId" required>
      <% restaurantes.forEach(r => { %>
        <option value="<%= r.id %>"><%= r.name %></option>
      <% }) %>
    </select>

    <button type="submit" class="create-btn">Criar Produto</button>
  </form>

  <a href="/admin/produtos" class="back-btn">Voltar</a>
</div>

<%- include('../../partials/footer') %>
