<%- include('../../partials/menu') %>

<h2>Editar Produto</h2>
<form action="/admin/produtos/<%= produto.id %>/editar" method="POST">
  <label for="name">Nome:</label>
  <input type="text" id="name" name="name" value="<%= produto.name %>" required />

  <label for="price">Pre√ßo:</label>
  <input type="number" id="price" name="price" value="<%= produto.price %>" step="0.01" required />

  <label for="imagemURL">Imagem:</label>
  <input type="text" id="imagemURL" name="imagemURL" value="<%= produto.imagemURL %>" />

  <label for="restaurantId">Restaurante:</label>
  <select id="restaurantId" name="restaurantId" required>
    <% restaurantes.forEach(r => { %>
      <option value="<%= r.id %>" <%= r.id === produto.restaurantId ? 'selected' : '' %>>
        <%= r.name %>
      </option>
    <% }) %>
  </select>

  <button type="submit">Atualizar</button>
</form>

<%- include('../../partials/footer') %>
