<%- include('../../partials/menu') %>

<div class="card">
  <h2>Detalhes do Produto</h2>
  <p><strong>ID:</strong> <%= produto.id %></p>
  <p><strong>Nome:</strong> <%= produto.name %></p>
  <p><strong>Preço:</strong> R$ <%= produto.price.toFixed(2) %></p>

  <% if (produto.imagemURL) { %>
    <img src="<%= produto.imagemURL %>" alt="Imagem do produto" class="product-img" />
  <% } %>

  <p><strong>Restaurante:</strong> <%= produto.restaurant?.name || '—' %></p>

  <div class="action-area">
    <a class="btn" href="/admin/produtos/<%= produto.id %>/editar">Editar</a>
    <a class="btn btn-secondary" href="/admin/produtos">Voltar</a>
  </div>
</div>

<%- include('../../partials/footer') %>
