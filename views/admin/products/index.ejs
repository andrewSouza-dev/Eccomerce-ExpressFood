<%- include('../../partials/menu') %>

<div class="page-container">

  <% if (msg) { %>
    <div class="flash-message success"><%= msg %></div>
  <% } %>

  <h2>Produtos cadastrados üçï</h2>

  <a href="/admin/produtos/novo" class="action-btn create-btn">Novo Produto</a>

  <div class="table-wrapper">
    <table class="table">
      <thead>
        <tr>
          <th>ID</th>
          <th>Nome</th>
          <th>Restaurante ID</th>
          <th>Restaurante</th>
          <th>A√ß√µes</th>
        </tr>
      </thead>

      <tbody>
        <% products.forEach(p => { %>
          <tr>
            <td><%= p.id %></td>

            <td><%= p.name %></td>

            <td><%= p.restaurantId %></td>

            <td><%= p.restaurant?.name %></td>

            <td>

              <!-- BOT√ÉO SHOW -->
              <a href="/admin/produtos/<%= p.id %>"
                 class="action-btn">
                Ver
              </a>

              <!-- EDITAR -->
              <a href="/admin/produtos/<%= p.id %>/editar"
                 class="edit-btn">
                Editar
              </a>

              <!-- EXCLUIR -->
              <form action="/admin/produtos/<%= p.id %>/excluir"
                    method="POST"
                    style="display:inline;">
                <button type="submit"
                        class="action-btn delete-btn"
                        onclick="return confirm('Tem certeza que deseja excluir?')">
                  Excluir
                </button>
              </form>

            </td>
          </tr>
        <% }) %>
      </tbody>

    </table>
  </div>

</div>

<%- include('../../partials/footer') %>
