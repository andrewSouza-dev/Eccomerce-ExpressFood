<%- include('../../partials/menu') %>

<h2>Produtos cadastrados</h2>

<%- include('../../partials/alert', { msg: msg, type: 'success' }) %>

<table border="1" cellpadding="8" cellspacing="0">
  <thead>
    <tr>
      <th>ID</th>
      <th>Nome</th>
      <th>Preço</th>
      <th>Restaurante</th>
      <th>Ações</th>
    </tr>
  </thead>
  <tbody>
    <% products.forEach(p => { %>
      <tr>
        <td><%= p.id %></td>
        <td><%= p.name %></td>
        <td>R$ <%= p.price.toFixed(2) %></td>
        <td><%= p.restaurant ? p.restaurant.name : '—' %></td>
        <td>
          <a href="/admin/produtos/<%= p.id %>/editar">Editar</a>
          <form action="/admin/produtos/<%= p.id %>/excluir" method="POST" style="display:inline;">
            <button type="submit" onclick="return confirm('Tem certeza que deseja excluir?')">Excluir</button>
          </form>
        </td>
      </tr>
    <% }) %>
  </tbody>
</table>

<a href="/admin/produtos/novo">Criar novo produto</a>

<%- include('../../partials/footer') %>
