<%- include('../../partials/menu') %>

<h2>Restaurantes cadastrados</h2>

<table border="1" cellpadding="8" cellspacing="0">
  <thead>
    <tr>
      <th>ID</th>
      <th>Nome</th>
      <th>Endereço</th>
      <th>Ações</th>
    </tr>
  </thead>
  <tbody>
    <% restaurantes.forEach(r => { %>
      <tr>
        <td><%= r.id %></td>
        <td><%= r.name %></td>
        <td><%= r.address %></td>
        <td>
          <a href="/admin/restaurantes/<%= r.id %>/editar">Editar</a>
          <form action="/admin/restaurantes/<%= r.id %>/excluir" method="POST" style="display:inline;">
            <button type="submit" onclick="return confirm('Excluir restaurante?')">Excluir</button>
          </form>
        </td>
      </tr>
    <% }) %>
  </tbody>
</table>

<a href="/admin/restaurantes/novo">Criar novo restaurante</a>

