<nav>
  <% if (typeof user !== 'undefined' && user) { %>
    <% if (user.isAdmin) { %>

      <!-- Admin vê apenas Admin + Sair -->
      <a href="/admin">Admin</a>
      <a href="/auth/login">Sair</a>
    <% } else { %>

      <!-- Cliente vê Home + Carrinho + Sair -->
      <a href="/home">Home</a>
      <a href="/cart">Carrinho</a>
      <a href="/logout">Sair</a>
    <% } %>
  <% } else { %>

    <!-- Não logado vê Home + Login + Cadastro -->
    <a href="/auth/login">Login</a>
    <a href="/auth/cadastro">Cadastro</a>
  <% } %>
</nav>
