<% const u = typeof user !== 'undefined' ? user : null; %>

<nav>
  <% if (u) { %>
    <% if (u.isAdmin) { %>

      <!-- Admin vê apenas Admin + Sair -->
      <a href="/admin">Admin</a>
      <a href="/auth/logout">Sair</a>
    <% } else { %>

      <!-- Cliente vê Home + Carrinho + Sair -->
      <a href="/home">Home</a>
      <a href="/cart">Carrinho</a>
      <a href="/auth/logout">Sair</a>
    <% } %>
  <% } else { %>

    <!-- Não logado vê Login + Cadastro -->
    <a href="/auth/login">Login</a>
    <a href="/auth/cadastro">Cadastro</a>
  <% } %>
</nav>
