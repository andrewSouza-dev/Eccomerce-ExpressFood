<% if (msg) { %>
  <% if (type === 'error') { %>
    <div style="padding:10px; background:#f8d7da; color:#721c24; border:1px solid #f5c6cb; margin-bottom:15px;">
      <%= msg %>
    </div>
  <% } else { %>
    <div style="padding:10px; background:#d4edda; color:#155724; border:1px solid #c3e6cb; margin-bottom:15px;">
      <%= msg %>
    </div>
  <% } %>
<% } %>
