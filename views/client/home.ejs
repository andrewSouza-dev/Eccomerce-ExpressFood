<%- include('../partials/menu') %>

<h2>Restaurantes</h2>

<form id="searchForm" action="/buscar/pratos" method="GET">
  <input type="text" name="nome" placeholder="Buscar prato..." required />
  <button type="submit">Buscar</button>
</form>

<ul id="restaurantList">
  <% if (restaurantes.length === 0) { %>
    <li>Nenhum restaurante disponÃ­vel.</li>
  <% } else { %>
    <% restaurantes.forEach(r => { %>
      <li>
        <a href="/restaurante/<%= r.id %>">
          <% if (r.imagemURL) { %>
            <img src="<%= r.imagemURL %>" alt="Imagem de <%= r.name %>" width="150" />
          <% } %>
        </a>
        <p><strong><%= r.name %></strong></p>
      </li>
    <% }) %>
  <% } %>
</ul>

